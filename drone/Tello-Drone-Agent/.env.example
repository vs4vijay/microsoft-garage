# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your_openai_endpoint_here
AZURE_OPENAI_API_KEY=your_openai_key_here
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Azure AI Vision Configuration
AZURE_AI_VISION_ENDPOINT=your_vision_endpoint_here
AZURE_AI_VISION_KEY=your_vision_key_here

# Azure Key Vault (Optional but recommended)
AZURE_KEY_VAULT_URL=your_keyvault_url_here

# Application Settings
LOG_LEVEL=INFO
CAMERA_SOURCE=webcam  # Options: webcam, tello
ENABLE_AUDIO_INPUT=true
VISION_CONFIDENCE_THRESHOLD=0.5

# Tello Drone Settings
TELLO_IP=192.168.10.1
TELLO_PORT=8889
TELLO_VIDEO_PORT=11111
