############################################################
# Tello Drone Agent - Environment Configuration Example     #
# Copy this file to `.env` and fill in real values.         #
# DO NOT COMMIT your populated `.env` file.                 #
############################################################

# ----------------------------------------------------------
# Azure OpenAI (Realtime + GPT-4o)                          
# ----------------------------------------------------------
# Endpoint format: https://<your-resource-name>.openai.azure.com
AZURE_OPENAI_ENDPOINT=https://your-openai-resource-name.openai.azure.com
AZURE_OPENAI_API_KEY=your-openai-api-key

# Realtime deployment used for speech + live planning (e.g. gpt-4o-realtime-preview)
AZURE_OPENAI_REALTIME_DEPLOYMENT=gpt-4o-realtime-preview

# Standard GPT-4o (non-realtime) deployment for heavier reasoning if used (optional)
AZURE_OPENAI_GPT4O_DEPLOYMENT=gpt-4o

# ----------------------------------------------------------
# Azure AI Vision                                           
# ----------------------------------------------------------
AZURE_AI_VISION_ENDPOINT=https://your-vision-resource.cognitiveservices.azure.com
AZURE_AI_VISION_KEY=your-vision-key

# ----------------------------------------------------------
# Azure AI Projects (if leveraging project-based APIs)      
# ----------------------------------------------------------
AZURE_AI_PROJECT_ENDPOINT=https://your-ai-project-endpoint.azure.com
AZURE_AI_PROJECT_API_KEY=your-ai-project-api-key

# ----------------------------------------------------------
# Key Vault (optional but recommended for secret storage)   
# Leave blank if not using.
# ----------------------------------------------------------
AZURE_KEY_VAULT_URL=your_keyvault_url_here

# ----------------------------------------------------------
# Drone / Agent Identity (optional persistence)             
# If set, reused instead of creating a new agent each run.  
# ----------------------------------------------------------
DRONE_AGENT_ID=

# ----------------------------------------------------------
# Application Runtime Settings                              
# ----------------------------------------------------------
LOG_LEVEL=INFO                # DEBUG, INFO, WARNING, ERROR
CAMERA_SOURCE=webcam          # webcam | tello
ENABLE_AUDIO_INPUT=true       # Enable mic input to realtime model
VISION_CONFIDENCE_THRESHOLD=0.5

# ----------------------------------------------------------
# Tello Drone Settings                                      
# ----------------------------------------------------------
TELLO_IP=192.168.10.1
TELLO_PORT=8889
TELLO_VIDEO_PORT=11111

# ----------------------------------------------------------
# Legacy / Unused (left here for clarity if seen elsewhere) 
# These are NOT referenced in current code. Remove if clean.
